<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MemoryClubApp.Views.Menu"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:controls="clr-namespace:Plugin.CrossPlatformTintedImage.Abstractions;assembly=Plugin.CrossPlatformTintedImage.Abstractions"
    xmlns:global="clr-namespace:Global.InputForms;assembly=Global.InputForms"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#1ABC9C</Color>
            <Color x:Key="Red">#8B0808</Color>
            <Color x:Key="BodyColor">#515A5A</Color>
            <Color x:Key="Blue">#154360</Color>
            <Color x:Key="Blue2">#2C7AA9</Color>
            <Color x:Key="violeta">#652D96</Color>
            <Color x:Key="gray">#ECECEC</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand"
            BackgroundColor="White"
            Padding="10">
            <yummy:PancakeView
                HorizontalOptions="CenterAndExpand"
                CornerRadius="15">
                <Image 
                    Source="logo.png"
                    WidthRequest="350"
                    HorizontalOptions="CenterAndExpand"/>
            </yummy:PancakeView>
            <StackLayout
                Orientation="Horizontal"
                Spacing="0"
                Margin="0,25">
                <yummy:PancakeView
                    VerticalOptions="Center"
                    HorizontalOptions="StartAndExpand"
                    
                    BackgroundColor="White"
                    Padding="10"
                    CornerRadius="10">
                    <yummy:PancakeView.Border>
                        <yummy:Border Color="#000000" Thickness="2" />
                    </yummy:PancakeView.Border>
                    <StackLayout 
                        HorizontalOptions="FillAndExpand"
                        Spacing="10"
                        Orientation="Horizontal">
                        <controls:TintedImage
                            TintColor="#43C900"
                            WidthRequest="35"
                            Source="usuario"/>
                        <Label
                            x:Name="lblUsuario"
                            HorizontalOptions="FillAndExpand"
                            FontSize="22"            
                            TextColor="{StaticResource BodyColor}"
                            VerticalTextAlignment="Center"/>
                    </StackLayout>
                   
                </yummy:PancakeView>
                

            </StackLayout>
            <StackLayout
                Spacing="40">
                <yummy:PancakeView
                    BackgroundColor="Transparent"
                    CornerRadius="20">
                    <global:ButtonContent
                        BackgroundColor="{StaticResource PrimaryColor}"
                        Clicked="AsistenciaButtonClicked">
                        <StackLayout 
                            Padding="20"
                            Orientation="Horizontal"
                            HorizontalOptions="CenterAndExpand"
                            Spacing="30">
                            <Label
                                FontSize="35"
                                TextColor="White"
                                HorizontalOptions="Start"
                                Text="Asistencia"/>
                            <controls:TintedImage
                            WidthRequest="50"
                            HeightRequest="50"
                            Source="asistencia"/>
                        </StackLayout>
                    </global:ButtonContent>
                </yummy:PancakeView>
                <yummy:PancakeView
                    BackgroundColor="Transparent"
                    CornerRadius="20">
                    <global:ButtonContent
                        BackgroundColor="{StaticResource Blue2}">
                        <StackLayout 
                            Padding="20"
                            Orientation="Horizontal"
                            HorizontalOptions="CenterAndExpand"
                            Spacing="30">
                            <Label
                                FontSize="35"
                                TextColor="White"
                                HorizontalOptions="Start"
                                Text="Transporte"/>
                            <controls:TintedImage
                                WidthRequest="50"
                                HeightRequest="50"
                                Source="transporte"/>
                        </StackLayout>
                    </global:ButtonContent>
                </yummy:PancakeView>
                <yummy:PancakeView
                    BackgroundColor="Transparent"
                    CornerRadius="20">
                    <global:ButtonContent
                        BackgroundColor="{StaticResource violeta}">
                        <StackLayout 
                            Padding="20"
                            Orientation="Horizontal"
                            HorizontalOptions="CenterAndExpand"
                            Spacing="30">
                            <Label
                                FontSize="35"
                                TextColor="White"
                                HorizontalOptions="Start"
                                Text="Catering"/>
                            <controls:TintedImage
                                WidthRequest="50"
                                HeightRequest="50"
                                Source="restaurante"/>
                        </StackLayout>
                    </global:ButtonContent>
                </yummy:PancakeView>
            </StackLayout>
            <yummy:PancakeView
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
                HeightRequest="50"
                WidthRequest="150"
                CornerRadius="20"
                BackgroundColor="Transparent">
                <yummy:PancakeView.Border>
                    <yummy:Border Color="{StaticResource Red}" Thickness="2" />
                </yummy:PancakeView.Border>
                <yummy:PancakeView.Shadow>
                    <yummy:DropShadow Color="#000000" Offset="10,10" BlurRadius="10"/>
                </yummy:PancakeView.Shadow>
                <global:ButtonContent
                        Clicked="CancelButton_Clicked">
                    <Image
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            WidthRequest="30"
                            HeightRequest="30"
                            Source="cerrarS.png"/>
                </global:ButtonContent>

            </yummy:PancakeView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>